# AITradeGame Configuration Example
# Copy this file to .env and update with your values

# ============ Flask Configuration ============
# Enable debug mode (True/False)
DEBUG=False

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=5000

# ============ Database Configuration ============
# Database type: sqlite or postgresql
DATABASE_TYPE=sqlite

# SQLite database file path (used when DATABASE_TYPE=sqlite)
SQLITE_PATH=AITradeGame.db

# PostgreSQL connection URI (used when DATABASE_TYPE=postgresql)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://trader:password@localhost:5432/aitradegame
POSTGRES_URI=

# ============ Trading Configuration ============
# Default trading fee rate (0.001 = 0.1%)
TRADE_FEE_RATE=0.001

# Default trading frequency in minutes (180 = 3 hours)
TRADING_FREQUENCY=180

# ============ Market Data Configuration ============
# Market data cache duration in seconds
MARKET_CACHE_DURATION=5

# Market API URL (CoinGecko API endpoint)
MARKET_API_URL=https://api.coingecko.com/api/v3

# Trading coins (comma-separated list)
TRADING_COINS=BTC,ETH,SOL,BNB,XRP,DOGE

# ============ Auto Trading ============
# Enable automatic trading loop (True/False)
AUTO_TRADING=True

# ============ Logging Configuration ============
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============ Frontend Configuration ============
# Market data refresh interval in milliseconds
MARKET_REFRESH_INTERVAL=5000

# Portfolio refresh interval in milliseconds
PORTFOLIO_REFRESH_INTERVAL=10000
