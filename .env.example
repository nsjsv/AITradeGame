# AITradeGame Configuration Example
# Copy this file to .env and update with your values

# ============ Flask Configuration ============
# Enable debug mode (True/False)
DEBUG=False

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=5000

# ============ Database Configuration ============
# PostgreSQL connection URI
# Format: postgresql://username:password@host:port/database
# Example: postgresql://trader:password@localhost:5432/aitradegame
POSTGRES_URI=postgresql://aitrade:aitrade@localhost:5432/aitrade

# ============ Market Data Configuration ============
# Market data cache duration in seconds
MARKET_CACHE_DURATION=5

# Market API URL (CoinGecko API endpoint)
MARKET_API_URL=https://api.coingecko.com/api/v3

# Market history collection (set to False to disable persistence)
MARKET_HISTORY_ENABLED=True
MARKET_HISTORY_INTERVAL=60
MARKET_HISTORY_RESOLUTION=60
MARKET_HISTORY_MAX_POINTS=500
MARKET_HISTORY_CACHE_TTL=60

# Trading coins (comma-separated list)
TRADING_COINS=BTC,ETH,SOL,BNB,XRP,DOGE

# ============ Auto Trading ============
# Enable automatic trading loop (True/False)
AUTO_TRADING=True

# ============ Logging Configuration ============
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============ Frontend (Next.js) ============
# Public API base URL for frontend requests
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Optional dedicated market API base URL (if using standalone collector)
NEXT_PUBLIC_MARKET_API_BASE_URL=http://localhost:5100

# Optional browser-only API base URL override (useful when containers communicate internally)
NEXT_PUBLIC_BROWSER_API_BASE_URL=http://localhost:5000

# Public WebSocket endpoint for realtime data
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# Environment indicator for UI badges
NEXT_PUBLIC_ENV=development
